
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <h2>Ajax Demo</h2>
        <h3>Current Time:</h3>
        <h4>@DateTime.Now.ToLongTimeString()</h4>

        @Html.ActionLink("Regular Request", "Index")
        @Ajax.ActionLink("Async Request", "GetCurrentDateTime", new AjaxOptions
   {
        InsertionMode = InsertionMode.Replace,
        HttpMethod = "GET",
        UpdateTargetId = "async_date",
        LoadingElementId = "async_load"
   })
        <div id="async_date"></div>
        <img id="async_load" src="~/Content/ajax-loader.gif" style="display:none" />
    </div>
    <script src="~/Scripts/jquery-1.8.0.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
</body>
</html>
